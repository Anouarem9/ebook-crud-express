<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ebook List</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f9;
      margin: 0;
      padding: 20px;
    }

    .container {
      min-width: 900px;
      margin: auto;
      background: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
      text-align: center;
      color: #333;
    }

    .d-flex{
      display: flex;
    }

    .gap-2{
      gap: 0.5rem;
    }

    form {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      margin-bottom: 15px;
      gap: 10px;
    }

    input, select, button {
      padding: 10px;
      border-radius: 4px;
      border: 1px solid #ddd;
      font-size: 16px;
    }

    input {
      flex: 1;
    }

    select {
      flex: 1;
      background: white;
    }

    button {
      background-color: #4CAF50;
      color: white;
      border: none;
      cursor: pointer;
      flex: 0.5;
    }

    button:hover {
      background-color: #45a049;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 15px;
      background: white;
    }

    th, td {
      padding: 12px;
      border: 1px solid #ddd;
      text-align: left;
    }

    th {
      background-color: #f8f8f8;
    }

    tr:hover {
      background-color: #f1f1f1;
    }

    img {
      width: 50px;
      border-radius: 4px;
    }

    .details-link,
    .delete-link {
      /* padding: 6p  x 12px; */
      background: #007BFF;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      display: inline-block;
      width: 100%;
      height: 2.4rem;
    }

    .details-link:hover {
      background: #0056b3;
    }

    .delete-link {
      background: #ff0000;
    }

    .delete-link:hover {
      background: #b30000;
    }

    .add-link {
      display: inline-block;
      margin-top: 15px;
      padding: 10px 15px;
      background-color: #28a745;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      text-align: center;
    }

    .add-link:hover {
      background-color: #218838;
    }
  </style>
</head>
<body>

  <div class="container">
    <h1>Ebook List</h1>

    <form method="GET">
      <!-- Title Filter (with onchange) -->
      <input id="titre" type="text" name="titre" placeholder="Title" value="<%= titre || '' %>" onkeyup="this.form.submit()">

      <!-- Category Select -->
      <select name="categorie" onchange="this.form.submit()">
        <option value="">Select Category</option>
        <% categories.forEach(category => { %>
          <option value="<%= category %>" <%= categorie === category ? 'selected' : '' %> ><%= category %></option>
        <% }) %>
      </select>

      <!-- Sort Date Select -->
      <select name="sort" onchange="this.form.submit()">
        <option value="DESC" <%= sort === 'DESC' ? 'selected' : '' %>>Newest First</option>
        <option value="ASC" <%= sort === 'ASC' ? 'selected' : '' %>>Oldest First</option>
      </select>

      <button type="submit">Filter</button>
    </form>

    <table>
      <tr>
        <th>ISBN</th>
        <th>Title</th>
        <th>Description</th>
        <th>Date</th>
        <th>Photo</th>
        <th>Price</th>
        <th>Category</th>
        <th>Actions</th>
      </tr>
      <% ebooks.forEach(ebook => { %>
        <tr>
          <td><%= ebook.ISBN.slice(0,8) %></td>
          <td><%= ebook.titre %></td>
          <td><%= ebook.description %></td>
          <td><%= ebook.date_edition.toISOString().split("T")[0] %></td>
          <td><img src="<%= ebook.photo %>" alt="Ebook Cover"></td>
          <td>$<%= ebook.prix %></td>
          <td><%= ebook.categorie %></td>
          <td> 
            <div class="d-flex gap-2">
              <form action="/ebooks/<%= ebook.ISBN %>" method="get"> 
                <button type="submit" class="details-link">Details</button>
              </form>
              <form action="/ebooks/<%= ebook.ISBN %>" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                <button type="submit" class="delete-link">Delete</button>
              </form>
            </div>
          </td>
        </tr>
      <% }) %>
    </table>

    <a href="/ebooks/create" class="add-link">Add New eBook</a>
  </div>
  
  <script>
    const params = new URLSearchParams(window.location.search);
    const message = params.get("message");

    if (message) {
      alert(message);
    }

    function focusAtEnd() {
      const input = document.getElementById("titre");
      input.focus();

      // Move cursor to the end
      const length = input.value.length;
      input.setSelectionRange(length, length);
    } 
    focusAtEnd();
  </script>
</body>
</html>
